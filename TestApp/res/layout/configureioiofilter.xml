<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IOIO Pin Filter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rgFilterType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbNone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="None" />

                    <RadioButton
                        android:id="@+id/rbWheelSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wheel Speed" />

                    <RadioButton
                        android:id="@+id/rbWheelSpeedRPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wheel Speed (RPM)" />
                    <RadioButton
                        android:id="@+id/rbTachometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tachometer" />
		
                    <RadioButton
                        android:id="@+id/rb944Coolant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="944 Coolant" />
                    <RadioButton
                        android:id="@+id/rb944OilPres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="944 Oil Pressure" />
                    <RadioButton
                        android:id="@+id/rb944FuelLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="944 Fuel Level" />
                    <RadioButton
                        android:id="@+id/rb944Alternator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="944 Alternator" />
                </RadioGroup>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/linCustom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In pitside, treat output as..."
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spnCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblParam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Param1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/txtParam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblParam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Param2"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/txtParam2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apply" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>